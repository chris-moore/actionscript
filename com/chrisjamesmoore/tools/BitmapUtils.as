package com.tuesday.tools {		import flash.display.DisplayObject;	import flash.display.Bitmap;	import flash.display.BitmapData;		/**	 *	[BitmapUtils]	 * 	 *	@class			BitmapUtils	 *	@author	 *	@version		1.0.1	 *	@date			Sep 19, 2012	 *	@client					 *	@project	 *	@producer	 *	@langversion	ActionScript 3.0	 *	@playerversion	Flash Player 10	 *	 *  @history 1.0.1 (2012.09.20) Ported class to com.chrisjamesmoore package for github repository.	 *	@history 1.0.0 (2010.08.17) Created initial version of BitmapUtils for AS3.	 */	public class BitmapUtils {			//--------------------------------------------------		// PUBLIC STATIC PROPERTIES		//--------------------------------------------------				/**		 *	The fully qualifed class name and path. This can be accessed from the class but the value		 * 	can also be retrieved from the instance using the getter fullyQualifedClassPath		 */		public static var FULLY_QUALIFIED_CLASS_PATH: String = "com.chrisjamesmoore.tools.BitmapUtils";				//--------------------------------------------------		// PRIVATE STATIC PROPERTIES		//--------------------------------------------------				//--------------------------------------------------		// PUBLIC PROPERTIES		//--------------------------------------------------				//--------------------------------------------------		// PRIVATE PROPERTIES		//--------------------------------------------------				//--------------------------------------------------		// CONSTRUCTOR		//--------------------------------------------------				/**		 *	Constructor		 */		public function BitmapUtils() {}				//--------------------------------------------------		// GETTERS / SETTERS		//--------------------------------------------------				/**		 *	Returns the fully qualified class path which includes the class package and class name as a string		 *	@return	-	String representing the full class path.		 *						For example: com.tuesday.tools.BitmapUtils		 */		public static function get fullyQualifiedClassPath(): String		{			return  BitmapUtils.FULLY_QUALIFIED_CLASS_PATH;		}				//--------------------------------------------------		// EVENT HANDLERS		//--------------------------------------------------				//--------------------------------------------------		// PUBLIC METHODS		//--------------------------------------------------				/**		 *	Convert a display object to a bitmap object, useful for texts		 *	@param display (DisplayObject) Object to convert to Bitmap		 *	@return Bitmap		 */		public static function convertToBitmap(display:DisplayObject):Bitmap		{			var bmpData:BitmapData = new BitmapData(display.width, display.height, true, 0x00ff00);			bmpData.draw(display);			var bmp:Bitmap = new Bitmap(bmpData);			bmp.smoothing = true;						return bmp;		}				/**		 *	Replace the object with a bitmap capture, removing original object from stage.		 *	@param display (DisplayObject) Object to replace		 *	@return	Bitmap		 */		public static function replaceWithBitmap(display:DisplayObject):Bitmap		{			var new_bmp:Bitmap = convertToBitmap(display);						new_bmp.x = display.x;			new_bmp.y = display.y;						if(!display.parent) { 				return new_bmp; 			}						display.parent.addChild(new_bmp);			display.parent.removeChild(display);						return new_bmp;		}			}}